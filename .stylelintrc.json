{
  "extends": ["stylelint-config-recommended"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "responsive",
          "screen",
          "variants",
          "extend",
          "config",
          "theme",
          "Utilities",
          "components"
        ]
      }
    ]
  }
}
